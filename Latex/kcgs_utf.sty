\renewcommand{\@maketitle}{%
    \begin{center}%
        {\LARGE\bf \@title \par}%
        \vspace{1\baselineskip}%
        \large
        \begin{tabular}[t]{c}%
            \@author
        \end{tabular}\par%
        \ifx\kcgs@affiliation\kcgs@empty \else%
            \vspace{0.5\baselineskip}%
            {\normalsize \kcgs@affiliation\par}%
        \fi%
        \ifx\kcgs@authoremail\kcgs@empty \else%
        	\vspace{0.2\baselineskip}
        	{\small \kcgs@authoremail\par}%
        \fi%
        \vspace{1\baselineskip}%
        {\Large\bf \kcgs@entitle \par}%
        \vspace{1\baselineskip}%
        \large
        \begin{tabular}[t]{c}%
        	\kcgs@enauthor
        \end{tabular}\par
        \ifx\kcgs@enaffiliation\kcgs@empty \else%
        	\vspace	{0.5\baselineskip}%
            {\normalsize \kcgs@enaffiliation\par}%
        \fi%
        \vspace{\titlespace}%
        \ifx\kcgs@teaser\kcgs@empty \else%
            \begingroup%
                \def\@captype{figure}%
                \kcgs@teaser%
            \endgroup\par%
        \fi%
        
        %% abstract section
        \begin{center}
        \abstract@produce
        \end{center}
        
        %% keywords
        \minipage{.95\textwidth}
        \normalsize
        \keywordlist
        \endminipage
		
    \end{center}\par
    
    \vspace{\titlespace}
}

\newbox\enabstractbox
\newenvironment{enabstract}{%
	\lrbox\enabstractbox
		\minipage{.95\textwidth}%
		\centerline{\bfseries\large\enabstractname}%
		%\bigskip\small\it
		\bigskip
  }{%
	\endminipage\endlrbox}

\newbox\abstractbox
\renewenvironment{abstract}{%
	\lrbox\abstractbox
		\minipage{.95\textwidth}%
		\centerline{\bfseries\large\abstractname}%
		%\bigskip\small\it
		\bigskip
  }{%
	\endminipage\endlrbox}

\def\abstract@produce{%
	\leavevmode\box\abstractbox\par
	\vspace{\titlespace}
	\leavevmode\box\enabstractbox\par
}

\let\kcgs@origmaketitle\maketitle
\let\kcgs@origand\and
\renewcommand{\maketitle}{%
    \let\kcgs@title\@title%
    \let\kcgs@author\@author%
    \kcgs@origmaketitle%
    \thispagestyle{empty}%
}

